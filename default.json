{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Asia/Tokyo",
  "schedule": ["before 3:00 am on the 1st and 15th day of the month"],
  "extends": [
    ":dependencyDashboard",
    ":semanticCommits",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    ":autodetectPinVersions",
    ":prHourlyLimitNone",
    ":prConcurrentLimit20",
    "group:allNonMajor",
    "workarounds:all"
  ],
  "labels": ["dependencies"],
  "node": {
    "enabled": false
  },
  "rangeStrategy": "bump",
  "platformCommit": true,
  "platformAutomerge": true,
  "major": {
    "automerge": false
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": ["before 3:00 am on the 1st and 15th day of the month"]
  },
  "packageRules": [
    {
      "matchPackageNames": ["node"],
      "enabled": false
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "rangeStrategy": "widen"
    },
    {
      "matchPackageNames": ["pnpm"],
      "groupName": "pnpm"
    },
    {
      "matchPackagePrefixes": ["react", "@types/react"],
      "groupName": "react"
    },
    {
      "matchPackagePatterns": ["^@aws-sdk/", "^aws-cdk"],
      "matchPackageNames": ["constructs"],
      "groupName": "aws"
    },
    {
      "matchPackagePatterns": ["^@nestjs/", "^nestjs"],
      "groupName": "nestjs"
    },
    {
      "matchPackagePatterns": ["pino"],
      "groupName": "pino"
    },
    {
      "matchPackagePatterns": ["rollup", "^@rollup/", "^rollup-"],
      "groupName": "rollup"
    },
    {
      "matchPackagePatterns": ["^@storybook/", "^storybook-"],
      "matchPackageNames": ["storybook"],
      "groupName": "storybook",
      "automerge": true
    },
    {
      "extends": "packages:test",
      "matchPackagePatterns": ["vitest", "^@vitest/"],
      "groupName": "test packages",
      "automerge": true
    },
    {
      "extends": "packages:linters",
      "matchPackageNames": ["@jict/eslint-plugin", "@jict/stylelint-plugin"],
      "groupName": "linters",
      "automerge": true
    },
    {
      "extends": "monorepo:babel",
      "groupName": "babel monorepo",
      "automerge": true
    },
    {
      "extends": "monorepo:nextjs",
      "groupName": "nextjs monorepo",
      "automerge": true
    },
    {
      "extends": "monorepo:material-ui",
      "groupName": "material-ui monorepo",
      "automerge": true
    }
  ],
  "ignoreDeps": ["graphql"]
}
