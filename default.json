{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "schedule:weekly",
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    ":autodetectPinVersions",
    ":prHourlyLimit4",
    ":prConcurrentLimit10",
    ":maintainLockFilesWeekly",
    "group:allNonMajor",
    "group:babelMonorepo",
    "group:reactMonorepo",
    "group:nextjsMonorepo",
    "group:aws-cdkMonorepo",
    "group:material-uiMonorepo",
    "workarounds:all"
  ],
  "labels": ["dependencies"],
  "node": {
    "enabled": false
  },
  "rangeStrategy": "bump",
  "platformCommit": true,
  "platformAutomerge": true,
  "packageRules": [
    {
      "packageNames": ["node"],
      "enabled": false
    },
    {
      "extends": "group:nodeJs",
      "enabled": false
    },
    {
      "extends": "group:storybookMonorepo",
      "matchPackagePatterns": ["^@storybook/"]
    },
    {
      "extends": "group:test",
      "matchPackageNames": ["vitest"]
    },
    {
      "extends": "group:linters",
      "matchPackageNames": ["@jict/eslint-plugin"]
    }
  ],
  "ignoreDeps": ["graphql"]
}
