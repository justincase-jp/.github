{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Asia/Tokyo",
  "schedule": ["before 3:00 am on the 1st and 15th day of the month"],
  "extends": [
    ":dependencyDashboard",
    ":semanticCommits",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    ":autodetectPinVersions",
    ":prHourlyLimitNone",
    ":prConcurrentLimit20",
    ":maintainLockFilesWeekly",
    "group:allNonMajor",
    "workarounds:all"
  ],
  "labels": ["dependencies"],
  "node": {
    "enabled": false
  },
  "rangeStrategy": "bump",
  "platformCommit": true,
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchPackageNames": ["node"],
      "enabled": false
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "rangeStrategy": "widen"
    },
    {
      "matchPackagePrefixes": ["react", "@types/react"],
      "groupName": "react"
    },
    {
      "matchPackagePatterns": ["^@aws-sdk/", "^aws-cdk"],
      "matchPackageNames": ["constructs"],
      "groupName": "aws"
    },
    {
      "matchPackagePatterns": ["^@nestjs/", "^nestjs"],
      "groupName": "nestjs"
    },
    {
      "matchPackagePatterns": ["^@storybook/", "^storybook-"],
      "groupName": "storybook",
      "automerge": true
    },
    {
      "extends": "packages:test",
      "matchPackageNames": ["vitest"],
      "groupName": "test packages",
      "automerge": true
    },
    {
      "extends": "packages:linters",
      "matchPackageNames": ["@jict/eslint-plugin"],
      "groupName": "linters",
      "automerge": true
    },
    {
      "extends": "group:babelMonorepo",
      "groupName": "babel Monorepo",
      "automerge": true
    },
    {
      "extends": "group:nextjsMonorepo",
      "groupName": "Next.js Monorepo",
      "automerge": true
    },
    {
      "extends": "group:material-uiMonorepo",
      "groupName": "material-ui Monorepo",
      "automerge": true
    }
  ],
  "ignoreDeps": ["graphql"]
}
