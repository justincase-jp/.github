{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:weekly",
    ":prHourlyLimit4",
    "group:allNonMajor",
    "group:test",
    "group:babelMonorepo",
    "group:nextjsMonorepo",
    "group:storybookMonorepo",
    "group:material-uiMonorepo"
  ],
  "labels": [
    "dependencies"
  ],
  "node": {
    "enabled": false
  },
  "lockFileMaintenance": {
    "enabled": true
  },
  "rangeStrategy": "bump",
  "platformCommit": true,
  "platformAutomerge": true,
  "packageRules": [
    {
      "extends": "group:nodeJs",
      "enabled": false
    },
    {
      "extends": "group:test",
      "matchPackageNames": ["vitest"]
    },
    {
      "extends": "group:linters",
      "matchPackageNames": ["@jict/eslint-plugin"]
    }
  ],
  "ignoreDeps": [
    "graphql"
  ]
}
