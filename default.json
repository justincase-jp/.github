{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "schedule:weekly",
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    ":autodetectPinVersions",
    ":prHourlyLimit4",
    ":prConcurrentLimit10",
    ":maintainLockFilesWeekly",
    "group:allNonMajor",
    "group:babelMonorepo",
    "group:nextjsMonorepo",
    "group:aws-cdkMonorepo",
    "group:material-uiMonorepo",
    "workarounds:all"
  ],
  "labels": ["dependencies"],
  "node": {
    "enabled": false
  },
  "rangeStrategy": "bump",
  "platformCommit": true,
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["node"],
      "matchPackagePatterns": ["/node$"],
      "excludePackageNames": ["calico/node", "kindest/node"],
      "commitMessageTopic": "Node.js",
      "enabled": false
    },
    {
      "matchPackagePatterns": ["^@storybook/", "^storybook-"],
      "matchUpdateTypes": ["digest", "patch", "minor", "major"],
      "groupName": "storybook"
    },
    {
      "extends": "monorepo:react",
      "matchPackagePatterns": ["react"],
      "groupName": "react"
    },
    {
      "extends": "packages:test",
      "matchPackageNames": ["vitest"],
      "groupName": "test packages"
    },
    {
      "extends": "packages:linters",
      "matchPackageNames": ["@jict/eslint-plugin"],
      "groupName": "linters"
    }
  ],
  "ignoreDeps": ["graphql"]
}
